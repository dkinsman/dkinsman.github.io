---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout-center.astro'
import { Image } from 'astro:assets'
import Carousel from '@/components/Carousel.astro'
import SocialIcons from '@/components/SocialIcons.astro'
import { SOCIAL_LINKS } from '@/consts'
import { cn } from '@/lib/utils'
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
<div class="grid grid-cols-12 grid-rows-1 md:grid-rows-3 gap-2 max-w-[65rem] mx-auto">
    <div class="col-span-12 row-auto md:col-span-9 md:row-span-3  rounded-lg">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-3xl leading-none font-medium">Hi, my name is Dawson :) </h3>
      </div>

      <div class="p-6 pt-0">
      <p class="text-muted-foreground mb-2 text-sm">
        I am a PhD student in the <Link href = "https://cmse.msu.edu" class="text-foreground" underline external> Computational Mathematics, Science, and Engineering</Link>
        at Michigan State University.
        Passionate about using computation and data science for good. Grateful to be working with <Link
          href="https://dannycaballero.info"
          class="text-foreground"
          underline
          external>Danny Caballero</Link
        > and other folks in the <Link
          href="https://msu-cerl.github.io/"
          class="text-foreground"
          underline>Computational Education Research Lab (CERL)</Link
        >.
      </p>
      <SocialIcons links={SOCIAL_LINKS} />

    </div>
    </div>

    <div class="col-start-1 col-span-12 md:col-span-3 md:row-span-3 md:col-start-10 rounded-lg overflow-hidden relative max-w-[20rem] flex center items-center">

    <Carousel />
    </div>
</div>  
</Layout>
