---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section class="rounded-lg border">
    <div class="flex flex-col space-y-1.5 p-6">
      <h3 class="text-3xl leading-none font-medium">Hi, my name is Dawson :) </h3>
      <p class="text-muted-foreground text-sm">
        Computational Mathematics, Science, and Engineering PhD Student &bull; Michigan State University
      </p>
    </div>
    <div class="p-6 pt-0">
      <p class="text-muted-foreground mb-2 text-sm">
        Passionate about using computation and data science for good. Grateful to be working with <Link
          href="https://dannycaballero.info"
          class="text-foreground"
          underline
          external>Danny Caballero</Link
        > and other folks in the <Link
          href="https://msu-cerl.github.io/"
          class="text-foreground"
          underline>Computational Education Research Lab (CERL)</Link
        >.
      </p>
    </div>
  </section>
</Layout>
